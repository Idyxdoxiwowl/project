extends ../layout

block content
  h1 Upload Document
  form(method="post", action="/documents/upload", enctype="multipart/form-data")
    .form-group
      label(for="title") Title
      input.form-control(type="text", name="title", required)
    .form-group
      label(for="category") Category
      input.form-control(type="text", name="category", required)
    .form-group
      label(for="department") Department
      input.form-control(type="text", name="department")
    .form-group
      label(for="type") Type
      input.form-control(type="text", name="type")
    .form-group
      label(for="file") File
      input.form-control-file(type="file", name="file", required)
    button.btn.btn-primary(type="submit") Upload
