extends ../admin-layout

block content
  .row
    .col-lg-12
      h1.page-header Create User
  .row
    .col-lg-6
      form(action='/admin/users/create', method='POST')
        .form-group
          label(for='username') Username
          input.form-control(type='text', name='username', required)
        .form-group
          label(for='email') Email
          input.form-control(type='email', name='email', required)
        .form-group
          label(for='password') Password
          input.form-control(type='password', name='password', required)
        .form-group
          label(for='role') Role
          select.form-control(name='role')
            option(value='engineer') Engineer
            option(value='accountant') Accountant
            option(value='admin') Admin
        button.btn.btn-primary(type='submit') Create
